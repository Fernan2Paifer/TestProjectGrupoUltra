
@{
    ViewData["Title"] = "DetailPrestamoTrabajador";
}


<div class="row">
    <div class="col-lg-3">
    </div>

    <div class="col-lg-6">
        <div class="widget-head-color-box navy-bg p-lg text-center">
            <div class="m-b-md">
                <h2 class="font-bold no-margins">
                    Prestamos de @ViewBag.Employee.Nombre
                </h2>

            </div>
            <img src="~/images/user.png" class="img-circle circle-border m-b-md" style="width: 30%;" alt="profile">

        </div>
        <div class="widget-text-box">



            @*<h4 class="media-heading"> @Model.Employee.Nombre</h4>*@
            <p>Gestion de prestamos de @ViewBag.Employee.Nombre</p>

        </div>
    </div>
    <div class="col-lg-3">
    </div>

</div>
<div id="detailPrestamosResult">


</div>

<script>

    $(document).ready(function() {

        RenderPrestamos();


    });

    function RenderPrestamos() {

        var areaResultadoPrestamos = $('#detailPrestamosResult');

        $.ajax({
            data: { IdTrabajador: '@ViewBag.IdTrabajador' },
            url: '@Url.Action("PrestamosByTrabajador", "Prestamo")',

        }).done(function(data) {

            areaResultadoPrestamos.html(data);

        });

    }

</script>